{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh

{{   if lookPath "docker" -}}
echo "Installing shell completion for Docker v{{ output "sh" "-c" "docker version --format='{{ .Client.Version }}' 2>&- || true" | trim }}..."
docker completion zsh > "{{ .completions.zsh }}/_docker"
{{   else -}}
rm -f "{{ .completions.zsh }}/_docker"
{{   end -}}

{{ end -}}
